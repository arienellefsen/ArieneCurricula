<div class="container">
    <div class="row curriculaMeta">
        <h3 id="currId" curTag="{{curricula.id}}"> {{curricula.curricula_name}} </h3>
        <h4> Category: <a href="/category/{{curricula.category}}">{{curricula.category}}</a> > <a href="/category/su_{{curricula.sub_category}}">{{curricula.sub_category}}</a> </h4>
        <p> Votes: {{curricula.votes}}</p>
        <p> Curricula Id: {{curricula.id}}</p>
    </div>
    <div class="row">
        <!-- Holds the details for the clicked curricula -->
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            {{#each curriculaDetails}}
                <div class="col-xs-12 col-sm-12 col-lg-12">
                    <h4>  Step: {{this.step_number}} </h4>
                    <p>  {{this.step_content}} </p>
                    {{#if this.step_url}}
                        <p>  Link: <a href="{{this.step_url}}" target="_blank">{{this.step_url}}</a> </p> 
                    {{/if}}
                </div>
            {{/each}}
            <button class="btn btn-success" id="vote" status="vote">Yay Curricula!</button> 
            <p class="alert-msg"></p>
        </div>
        
        <!-- Holds related curricula -->
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
            <h4>{{curricula.category}} related:</h4>

            <div class="list-group">
                {{#each allCurricula}}
                    <a href="/curricula/{{this.id}}" class="list-group-item">
                        <h4 class="list-group-item-heading">{{this.curricula_name}}</h4>
                        <p class="list-group-item-text">{{this.description}}</p>
                    </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<script src="../assets/js/details.js"></script>
