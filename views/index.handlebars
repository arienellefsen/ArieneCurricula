
	<h1>Eat That Burger</h1>	
<div class="container">
    <h1>Eat-That-Burger</h1>
    <div class="row">
        <div class="col-sm-4 col-md-4"
            <h3>Create a burger</h3>
            <form class="form-inline" action="/api/posts" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" id="submit-burger" name="burger_name" placeholder="Name">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>

        <div class="col-sm-4 col-md-4">
            <h2>Burgers to eat:</h2>
            <ul class="burgers">
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}
                    <form action="/api/posts/{{this.id}}?_method=PUT" method="POST" class="devour">
                        <input type="hidden" name="devoured" value="true" id="sub">
                        <button type="submit">Devour!</button>
                    </form>
                    {{this.alert}}
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-sm-4 col-md-4">
            <h2> Burgers deleted:</h2>
           <table class="table table-striped table-bordered">
                {{#each burgers}}
                    {{#if this.devoured}}
                        <tr>
                            <td>
                                {{this.burger_name}}
                            </td>
                        </tr>
                    {{/if}}
                {{/each}}
            </table>
        </div>
     </div>

 </div>
