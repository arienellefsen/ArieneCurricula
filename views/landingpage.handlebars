
<div class="container">
  
    <div class="row" id="landing-content">
        {{#each curriculaInstance}}
            {{#if this.submited_status}}
            <div class="col-xs-12 col-sm-3 col-lg-3 card-home">
                <div class="card card-2 lazy">

                <div class="card card-2">
                      <a href="curricula/{{this.id}}">
                    <div class="card-title">{{this.curricula_name}}</div>
                      </a>
                <div class="thumbnail" id="cur{{this.id}}">  
                        {{!--<img src="./assets/img/default_curriculum.png" alt="{{this.curricula_name}}"> --}}
                    
                    <div class="caption"> 
                        <p> {{this.description}} </p>
                        <p> <i class="fa fa-certificate icon-home" aria-hidden="true"></i>
Votes: {{this.votes}} </p>
                        <p> <i class="fa fa-user-circle-o icon-home" aria-hidden="true"></i>
Author: {{this.authorId}} </p>
                    </div>
                </div>
                </div>
            </div>
            {{/if}}
        {{/each}}
    </div>
</div>


