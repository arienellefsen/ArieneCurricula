
<div class="container">
    <!-- Login Area -->
    <div class="row">
        <h1><span class="fa fa-lock"></span> Curricula</h1>
        <p>Login or Register with:</p>
        <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google</a>
    </div>
    <div class="row" id="landing-content">
        {{#each curriculaInstance}}
            {{#unless this.submited_status}}
            <div class="col-xs-12 col-sm-3 col-lg-3">
                <div class="thumbnail" id="cur{{this.id}}">
                    <a href="curricula/{{this.id}}">
                        <img src="./assets/img/default_curriculum.png" alt="{{this.curricula_name}}"> 
                    </a>
                    <div class="caption"> 
                        <p> {{this.curricula_name}} </p>  
                        <p> {{this.description}} </p>
                        <p> {{this.votes}} </p>
                    </div>
                </div>
            </div>
            {{/unless}}
        {{/each}}
    </div>
</div>

<script type="" src="./assets/js/landing.js"></script>
